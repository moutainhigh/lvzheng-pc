<script>
$(function(){
	// 根据li个数自动计算ul宽度
    var num = $(".ul-list1 li.item").length;
    $(".ul-list1").width(305*num);
    var num = $(".ul-list2 li.item").length;
    $(".ul-list2").width(303*num);
    var num = $(".ul-list3 li.item").length;
    $(".ul-list3").width(303*num);
    var num = $(".ul-list4 li.item").length;
    $(".ul-list4").width(303*num);
	
	//根据后台的参数选中相关内容
	var cityid = "$!{cityid}";
	var productid = "$!{productid}";
	var areaid = "$!{areaid}";
	if(productid){
		$("#J_prod_ul").find("li").each(function(){
			var pid = $(this).attr("oid");
			if(productid == pid){
				$(this).attr("class","checked");
			}else{
				$(this).attr("class","b-box hide");
			}
		})
	}
	
	if(areaid){
		$("#J_area_ul").find("li").each(function(){
			var pid = $(this).attr("oid");
			if(areaid == pid){
				$(this).attr("class","checked");
			}else{
				$(this).attr("class","b-box hide");
			}
		})
	}
	
	if(cityid){
		$("#J_city_ul").find("li").each(function(){
			var pid = $(this).attr("oid");
			if(cityid == pid){
				$(this).attr("class","checked");
			}else{
				$(this).attr("class","b-box hide");
			}
		})
	}
	

    // 选择商品
    $(".c-sp li").each(function(){
        $(this).click(function(){
            $(".c-sp li").addClass("b-box").removeClass("checked");
            $(this).addClass("checked").removeClass("b-box");
            
            //获取id
            var pid = $(this).attr("oid");
            $("#J_pid").val(pid);
            var cid = $("#J_cityid").val();
            var aid = $("#J_areaid").val();
            
            var url = "/commondetail/detail/"+pid+".html";
            window.location.href = url;
            
        })
    });





    // 选择区域
    $(".c-area li").each(function(){
        $(this).click(function(){
            $(".c-area li").addClass("b-box").removeClass("checked");
            $(this).addClass("checked").removeClass("b-box");
            
            //获取id
            var aid = $(this).attr("oid");
            var cid = $("#J_cityid").val();
            var pid = $("#J_pid").val();
            $("#J_areaid").val(aid);
            
            //隐藏右侧优惠券
            $(".colse-btn").click();
            $.ajax({

                url:"/commondetail/detail/queryPrice",

                type:"post",

                data:{"pid":pid,"cityid":cid,"areaid":aid},

                success:function(data){

                	var sellprice = data.sellprice;
                	var marketprice = data.marketprice;
                	var sellid = data.sellid;
                	//异步替换数值
                	$("#J_hd_pri").text(sellprice);
                	$("#J_top_pri").text(sellprice);
                	
                	$("#J_top_mark_pri").text(marketprice);
                	$("#J_hd_mark_pri").text(marketprice);
                	$("#J_buy_btn").attr("href","/order/index/"+sellid+".html");
                	$("#J_buy_btn_2").attr("href","/order/index/"+sellid+".html");
                }

            });
            
           // debugger;
            /***查询商品包集合***/
            $.post("/commondetail/getPackageSellList",{"productid":pid,"cityid":cid,"areaid":aid},function(data){
            	$("#packageList").html("");  
            	$("#packageList").html(data);
                showPackageList();
            });
        })
    });
    // 选择城市
    $(".c-city li").each(function(){
        $(this).click(function(){
            $(".c-city li").addClass("b-box").removeClass("checked");
            $(this).addClass("checked").removeClass("b-box");
            
            //获取id
            var cid = $(this).attr("oid");
            $("#J_cid").val(cid);
            var pid = $("#J_pid").val();
            var aid = $("#J_areaid").val();
            
            $.ajax({

                url:"/commondetail/detail/queryCity",

                type:"post",

                data:{"pid":pid,"cityid":cid,"areaid":aid},

                success:function(data){

                	var sellprice = data.sellprice;
                	var marketprice = data.marketprice;
                	var arealist = data.area;

                	var sellid = data.sellid;
               
                	
                	//清空区域列表
                	$("#J_area_ul").empty();
                	for(var i=0;i<arealist.length;i++){
                		var li = "";
                		
                		if(i==0){
                			
                			 li = "<li class=\"checked\" oid=\""+arealist[i].areaid+"\">"+arealist[i].name+"</li>";
                		}else{
                			 li = "<li class=\"b-box hide\" oid=\""+arealist[i].areaid+"\">"+arealist[i].name+"</li>";
                		}
                		$("#J_area_ul").append(li);
                		
                		rebind();
                	}
                	//异步替换数值
                	$("#J_hd_pri").text(sellprice);
                	$("#J_top_pri").text(sellprice);
                	
                	$("#J_top_mark_pri").text(marketprice);
                	$("#J_hd_mark_pri").text(marketprice);
                	
                	
                	$("#J_buy_btn").attr("href","/order/index/"+sellid+".html");
                	$("#J_buy_btn_2").attr("href","/order/index/"+sellid+".html");
                }

            });
            
            /***查询商品包集合***/
            $.post("/commondetail/getPackageSellList",{"productid":pid,"cityid":cid,"areaid":aid},function(data){
            	$("#packageList").html("");
            	$("#packageList").html(data);
                showPackageList();
            });
        })
    });


    
    /* // 无忧套餐切换
    $(".tc-con").hide(); 
    $(".tc-tabs p:first").addClass("active").show(); 
    $(".tc-con:first").show(); 
    $(".tc-tabs p").click(function() {
        $(".tc-tabs p").removeClass("active"); 
        $(this).addClass("active"); 
        $(".tc-con").hide(); 
        var activeTab = $(this).find("a").attr("href"); 
        $(activeTab).fadeIn(); 
        return false;
    }); */
    showPackageList();

    // 中部menu
    $(window).scroll(function(){
        var top = $(document).scrollTop();          
        var menu = $("#menu");                      
        var items = $("#content").find(".md-hover"); 
        var curId = "";                             
        items.each(function(){
            var m = $(this);                        
            var itemsTop = m.offset().top;        
            if(top > itemsTop-100){
                curId = "#" + m.attr("id");
            }else{
                return false;
            }
        });

        var curLink = menu.find(".cur");
        if( curId && curLink.attr("href") != curId ){
            curLink.removeClass("cur");
            menu.find( "[href=" + curId + "]" ).addClass("cur");
        }
    });

});

var showPackageList = function(){
	// 无忧套餐切换
    $(".tc-con").hide(); 
    $(".tc-tabs p:first").addClass("active").show(); 
    $(".tc-con:first").show(); 
    $(".tc-tabs p").click(function() {
        $(".tc-tabs p").removeClass("active"); 
        $(this).addClass("active"); 
        $(".tc-con").hide(); 
        var activeTab = $(this).find("a").attr("href"); 
        $(activeTab).fadeIn(); 
        return false;
    });
}


function rebind(){
	 // 选择区域
    $(".c-area li").each(function(){
        $(this).click(function(){
            $(".c-area li").addClass("b-box").removeClass("checked");
            $(this).addClass("checked").removeClass("b-box");
            
            //获取id
            var aid = $(this).attr("oid");
            var cid = $("#J_cityid").val();
            var pid = $("#J_pid").val();
            $("#J_areaid").val(aid);
            $.ajax({

                url:"/commondetail/detail/queryPrice",

                type:"post",

                data:{"pid":pid,"cityid":cid,"areaid":aid},

                success:function(data){

                	var sellprice = data.sellprice;
                	var marketprice = data.marketprice;
                	var sellid = data.sellid;
                	//异步替换数值
                	$("#J_hd_pri").text(sellprice);
                	$("#J_top_pri").text(sellprice);
                	
                	$("#J_top_mark_pri").text(marketprice);
                	$("#J_hd_mark_pri").text(marketprice);
                	$("#J_buy_btn").attr("href","/order/index/"+sellid+".html");
                	$("#J_buy_btn_2").attr("href","/order/index/"+sellid+".html");
                	
                }

            });
        })
    });
}

</script>

